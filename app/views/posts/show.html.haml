/ - provide(:title, raw(@post.name))

.row.container{ ng_controller: 'PostCtrl', ng_init: 'init()', ng_cloak: true }
	.span4.sidebar-nav-fixed.blog_list
		
		%h1.squeeze Recent Posts

		%ul
			%li.total_hover{ ng_repeat: 'post in postList' }
				%a#link_name{ ng_href: '/posts/{{post.slug}}' }
					{{ post.name }}
					%span.manual_small {{ post.created_at | date:'mediumDate' }}
		
		.link_disclaimer{ ng_if: '{postLimit > 5}' }
			%h6 ---
			%h5 Showing {{postLimit}} most recent.
			%h5.blue_links See #{link_to 'archive', archive_path} for more.

		.prevnext
			- if current_user
				%a{ ng_href: "{{ postEditPath(mainPost) }}", style: "margin-right:10px;" } EDIT 
			.prev-post{ ng_hide: '!previousPost' }
				%a{ ng_href: '{{ postShowPath(previousPost) }}' } << PREV
			.next-post{ ng_hide: '!nextPost' }
				%a{ ng_href: '{{ postShowPath(nextPost) }}' }NEXT >>

	.span7.left-bar.move-right#blog_content
		%h1.squeeze
			{{ mainPost.name }}
			%small ({{mainPost.created_at | date:'shortDate' }})
		
		.markdown{ markdown: '{{mainPost.content}}' }