<div class="centerify">
  <h1>Listing posts</h1>

  <table class="table">
    <tr>
      <th>Name</th>
      <th>Posted</th>
      <th>Content</th>
      <th></th>
      <th></th>
    </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.name %></td>
      <td><%= post.created_at.strftime("%b %d, %Y") %>
      <td><%= post.content.first(50) %>...</td>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
      <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </table>

  <br />

  <%= link_to 'New Post', new_post_path %>

</div>