<% provide(:title, 'On coding') %>

	<div class="span4 sidebar-nav-fixed">
		<h1 class="squeeze">Recent Topics</h1><br>
			<%= form_tag devlog_path, class: "form-search", :method => 'get' do %>
			  <p>
			    <%= text_field_tag :search, params[:search], options = { class: "search-query search" } %>
			    <%= submit_tag "Search", :name => nil, class: "btn" %>
			  </p>
			<% end %>
			<ul class="blog_list">
				<% @postlist.last(10).each do |p| %>
					<li><a href=<%="/devlog?page=#{p.id}\#" %> ><%= p.name %> <span class="manual_small">(<%= p.created_at.strftime("%b %d, %Y") %>)</span></a></li>
				<% end %>
			</ul>
			<div class="center">
				<%= will_paginate @posts, previous_label: "<<", next_label: ">>", inner_window: 0, outer_window: 0 %>
			</div>
	</div>

		<% @posts.each do |p| %>
			<div class="span7 left-bar move-right">
				<h1 class="squeeze"><%= p.name %> <small>(<%= p.created_at.strftime("%m/%d/%Y") %>)</h1>
					<%= markdown p.content %>
					<%= link_to "EDIT", "/posts/#{p.id}/edit" if current_user %>
			</div>
		<% end %>

</div> <!-- Ending row div from app.html.erb -->
